@{ }
@model List<DbdataforStockVolatility>

<div class="flex flex-wrap">

    <h1>Stock Data and Volatilty Listing </h1>
    <p class="lead">Here we provide Canadians with an API-powered list of stock data, to look up the volatility of your preferred stock. Or, add your own.   </p>
    <a href="@Url.Action("AddStock", "DbdataforStockVolatility")" type="button" class="btn btn-outline-success">Add New Stock</a> <br /><br />

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm">
        <thead class="thead-dark">
            <tr>
                <th scope="col">stockIdTicker</th>
                <th scope="col">name</th>
                <th scope="col">sector</th>
                <th scope="col">stockVolatility</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
<tr>
    <td scope="row">@Model[i].stockIdTicker</td>
    <td>@Model[i].name</td>
    <td>@Model[i].sector</td>
    <td>@Model[i].stockVolatility</td>
    <td>
        <a href="@Url.Action("ViewStockDetails", "DbdataforStockVolatility", new { stockTickerId = Model[i].stockIdTicker})" class="btn btn-primary">View</a>
        @*<a href="@Url.Action("EditMovie", "Home", new { movieId = movie.MovieId})" type="button" class="btn btn-success">Edit</a>*@
        <a href="@Url.Action("DeleteStock", "DbdataforStockVolatility", new { stockTickerId = Model[i].stockIdTicker})" type="button" class="btn btn-danger">Delete</a>
    </td>

</tr>
       }
        </tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').dataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    });
    </script>
}

